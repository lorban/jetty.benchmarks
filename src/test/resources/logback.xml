      </encoder>
    </appender>

    <logger name="org.terracotta.angela.external.client" level="INFO" additivity="false">
      <appender-ref ref="REMOTE" />
    </logger>
    <logger name="org.terracotta.angela" level="WARN"/>
    <logger name="org.zeroturnaround.process" level="WARN"/>
  -->

  <root level="INFO">
