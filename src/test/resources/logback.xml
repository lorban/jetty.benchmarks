<configuration>

  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="org.terracotta.angela.external.client" level="INFO"/>
  <logger name="org.terracotta.angela" level="WARN"/>
  <logger name="org.zeroturnaround.process" level="WARN"/>

  <root level="INFO">
    <appender-ref ref="CONSOLE" />
  </root>

</configuration>
